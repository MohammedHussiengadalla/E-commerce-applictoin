<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple"
    tools:context=".fragment.Search">

    <EditText
        android:id="@+id/search_keyword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:drawableRight="@drawable/ic_search"
        android:hint="Search keyword"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent" />
    <Spinner
        android:id="@+id/cate_search2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/search_keyword2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        android:layout_margin="10dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="scan"
        android:id="@+id/scan"
        app:layout_constraintTop_toBottomOf="@+id/search_keyword2"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/voice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="Voice"
        app:layout_constraintTop_toBottomOf="@+id/scan" />

    <ListView
        android:id="@+id/list_products2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voice" />



</androidx.constraintlayout.widget.ConstraintLayout>